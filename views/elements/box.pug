        table(class="table is-bordered")
            thead
                tr
                    th
                        | Name
                    th
                        | Default value
            tfoot
                tr
                    th
                        | Name
                    th
                        | Default value
            tbody
                tr
                    td
                        code
                            | $box-color
                    td
                        code
                            | $text
                tr
                    td
                        code
                            | $box-background-color
                    td
                        code
                            | $white
                tr
                    td
                        code
                            | $box-radius
                    td
                        code
                            | $radius-large
                tr
                    td
                        code
                            | $box-shadow
                    td
                        code
                            | 0 2px 3px rgba($black, 0.1), 0 0 0 1px rgba($black, 0.1)
                tr
                    td
                        code
                            | $box-padding
                    td
                        code
                            | 1.25rem
                tr
                    td
                        code
                            | $box-link-hover-shadow
                    td
                        code
